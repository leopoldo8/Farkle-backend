{
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@common/(.*)$": "<rootDir>/common/$1",
    "^@database/(.*)$$": "<rootDir>/database/$1"
  },
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
